    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>My Tasker App</title>

</head>

<body>
  <div class="task-container">
    <h2> My Tasker</h2><br />
    <div class="add-task-conatiner">
      <form method="POST" action="/submit">
        <input type="text" name="task">
        <input type="submit" value="Add" />
      </form>
    </div>
    <ul>
      <!-- <li><%=data%></li> -->
      <% for(let i of data){ %>
        <li>
          <%=i.name%> <a href="/edit/<%=i._id%>"><i class="fa-solid fa-pen"></i></a><a href="/delete/<%=i._id%>"><i class="fa-solid fa-trash"></i></a>
        </li> <br>
        <% } %>

    </ul>
  </div>
</body>

</html>